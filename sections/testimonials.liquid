{%- liquid

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'mt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'mt0 pb0'
  endif

  assign section_context = '.testimonials-' | append: section.id

  assign is_carousel = false
  if section.blocks.size > 3
    assign is_carousel = true
    assign slider_speed = section.settings.slider_speed | times: 1000
  endif

-%}

<section class="global__section testimonials-{{ section.id }} {{ section_padding }}" id="testimonials-{{ section.id }}" data-section-type="homepage-testimonials" data-section-id="{{ section.id }}" data-aos="fade">
  <div class="row grid__wrapper gr0">
    {% if section.settings.heading != blank %}
      <div class="span-12 auto">
        <h2 class="section-heading">{{ section.settings.heading | escape }}</h2>
      </div>
    {% endif %}

    {% capture slideshow_config %}{
      "wrapAround":true,
      "cellAlign": "left",
      "dragThreshold":"15",
      "autoPlay": {{ slider_speed }},
      "pauseAutoPlayOnHover":false,
      "prevNextButtons":true,
      "pageDots": false
    }{% endcapture %}

    {% capture star %}
      {% render 'snip-icons',
         wrapper: section_context,
         type: 'apollo',
         icon: 'star',
         classes: 'testimonials--icon vib-center',
         size: '14px',
         fill: section.settings.star_color,
         hover: section.settings.star_color %}
    {% endcapture %}

    <div class="testimonial__container{% if is_carousel %}-carousel flickity__section js-carousel {% else %} grid__wrapper  grid__wrapper-nest{% endif %} span-12 auto"{% if is_carousel %} data-flickity='{{ slideshow_config }}'{% endif %}>
      {% for block in section.blocks %}
        <div class="testimonial span-4 sm-span-12 auto {% if forloop.first %}{% if section.blocks.size == 1 %} push-4{% elsif section.blocks.size == 2 %} push-2{% endif %}{% endif %}" {{ block.shopify_attributes }} data-slider-index="{{ forloop.index0 }}" >
          <div class="testimonial__content">
            {% if block.settings.heading_text != blank %}
              <h3>{{ block.settings.heading_text | escape }}</h3>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="rte">
                {{ block.settings.text }}
              </div>
            {% endif %}

            <div class="stars">
              {% case block.settings.stars %}
              {% when 1 %}
                {{ star }}
              {% when 2 %}
                {{ star }}
                {{ star }}
              {% when 3 %}
                {{ star }}
                {{ star }}
                {{ star }}
              {% when 4 %}
                {{ star }}
                {{ star }}
                {{ star }}
                {{ star }}
              {% when 5 %}
                {{ star }}
                {{ star }}
                {{ star }}
                {{ star }}
                {{ star }}
              {% endcase %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  {% if section.blocks.size == 0 %}
    {% render 'no-blocks' %}
  {% endif %}

  {% if is_carousel %}
  <style>
    @media screen and (min-width: 741px) {
      .testimonials-{{ section.id }} .testimonial {
          width: 33% !important;
          grid-column: unset !important;
          padding: 0 15px;
      }
    }
    @media screen and (max-width: 740px) {
      .testimonials-{{ section.id }} .testimonial {
          width: 100% !important;
          grid-column: unset !important;
      }
    }
  </style>
  {% endif %}

</section>
<div class="clear"></div>


{% schema %}
{
  "name": "Testimonials",
  "max_blocks": 12,
  "settings": [{
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Testimonials"
    },
    {
      "type": "range",
      "id": "slider_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "label": "Rotate every",
      "unit": "sec",
      "default": 5,
      "info": "Carousel enabled when more than 3 testimonials added"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star color",
      "default": "#ffd450"
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Section spacing",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "both",
          "label": "Both"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "bottom"
    }
  ],
  "blocks": [{
    "type": "text_block",
    "name": "Testimonial",
    "settings": [{
        "type": "text",
        "id": "heading_text",
        "label": "Testimonial heading",
        "default": "A testimonial"
      },
      {
        "type": "range",
        "id": "stars",
        "min": 1,
        "max": 5,
        "step": 1,
        "label": "Star ratings",
        "default": 5
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Testimonial text",
        "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
      }
    ]
  }],
  "presets": [{
    "name": "Testimonials",
    "blocks": [{
        "type": "text_block"
      },
      {
        "type": "text_block"
      },
      {
        "type": "text_block"
      }
    ]
  }],
  "templates": ["404", "article", "blog", "cart", "collection", "list-collections", "index", "page", "product", "search"]
}
{% endschema %}
